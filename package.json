{
  "name": "balaroti.store-theme",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "pretest": "eslint --fix --ext .ts,.tsx .",
    "sass": "node-sass-chokidar ./styles/scss --output ./styles/css --output-style expanded -quiet --source-map-root ./global  --watch  --usePolling --polling-interval 500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "@vtex/prettier-config": "0.1.4",
    "@vtex/tsconfig": "^0.5.6",
    "eslint": "7.12.1",
    "eslint-config-vtex": "12.3.2",
    "eslint-config-vtex-react": "6.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.4",
    "prettier": "^2.4.1",
    "typescript": "^4.4.2",
    "node-sass": "^6.0.0"
  },
  "dependencies": {
    "node-sass-chokidar": "^1.5.0"
  }
}